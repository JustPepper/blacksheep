.content-nav
	background-color $black
	color white
	font-family $secundary_font
	font-weight 300
	letter-spacing 3px
	font-size 75%
	ul
		display flex
		flex-wrap wrap
		@media screen and (min-width: 768px)
			flex-direction row
		li
			size (100 /2)% 75px
			transition all 250ms linear
			border-bottom 1px dashed #999
			border-right 1px dashed #999
			&:nth-child(2n+2)
				border-right 0
			&:nth-child(n+5)
				border-bottom 0
			@media screen and (min-width: 768px)
				size (100 / 3)% 75px
				border-right 1px dashed #999
				border-bottom 1px dashed #999
				&:nth-child(2n+2)
					border-right 1px dashed #999
				&:nth-child(3n+3)
					border-right 0
				&:nth-child(n+4)
					border-bottom 0
			a
				size 100%
				flex-center()
			&:hover
				background-color #999999

.gray-title
	background-color #dbdbdb
	padding 45px 
	@media screen and (min-width: 768px)
		padding 45px 0

.products
	display flex
	flex-wrap wrap
	justify-content center
	padding-top 75px
	+m('carrousel')
		padding 75px 50px
		.right
			right 0
		.left
			left 0
			transform rotate(180deg)
		.slick-arrow
			size 50px
			background none
			border 0
			position absolute
			top 50%
			margin-top -25px
			outline 0
			svg
				size 26px
			
		.product
			height 160px
			margin 0 14px
			+e('photo')
				margin 10px 0 0 0			
				size(100%, 142px)
				flex-center()
			+e('name')
				display none
			+m('new')
				&:before
					size 66px 23px
					font-size 70%
					top 0
	@media screen and (min-width: 768px)
		justify-content space-between

.featured-products
	background-color #dbdbdb
	.grid__col
		background-size 100% auto
		background-position center
		background-repeat no-repeat
		@media screen and (min-width: 768px)
			background-size cover
		+m('with-border')
			border-bottom 1px solid $black
			@media screen and (min-width: 768px)
				border-right 1px solid $black
				border-bottom 0
	.featured-main
		.grid__col
			height 373px
		.featured-main-text
			display flex
			flex-direction column
			align-items space-around
			justify-content space-around
			size 100%
			padding 35px
			@media screen and (min-width: 768px)
				padding 35px 0 35px 45px
	.featured-small
		.grid__col
			height 234px
			background-size cover

.single-product
	display flex
	flex-direction column
	height auto
	padding-bottom 45px
	@media screen and (min-width: 768px)
		flex-direction row
	+e('photos')
		size 100% 150px
		margin-bottom 45px
		overflow hidden
		text-align center
		@media screen and (min-width: 768px)
			size 20% 455px
		img
			size auto 100%
			@media screen and (min-width: 768px)
				size 100% auto
	.product 
		size 90% 300px
		margin 0 auto
		@media screen and (min-width: 768px)
			size 475px
			margin 0 45px
	+e('info')
		width 100%
		font-family $secundary_font
		padding 22px
		@media screen and (min-width: 768px)
			width 35%
			padding 0
		.text
			font-size 14px
	+e('title')
		font-size 26px
		font-weight 300
		margin-bottom 22px
		b
			font-weight 900
	+e('subtitle')
		font-size 16px
		display flex
		justify-content space-between
		cursor pointer
		user-select none
		svg
			size 18px
	+e('specs')
		margin-top 22px
		border-top 1px dashed #dbdbdb
		padding 22px 0
		.text
			line-height 1.5
			margin-top 22px
		.displayed-content
			display none
			+m('show')
				display flex
		ul
			display flex
			width 100%
			padding 22px 0 0
			li
				width (100 / 4)%
		.spec
			display flex
			flex-direction column
			justify-content center
			align-items center
			font-size 14px
			text-align left
			line-height 1.5
			+e('icon')
				size 55px
				border 1px solid #dbdbdb
				flex-center()
				svg
					size 28px
			+e('info')
				ul
					display flex
					flex-wrap wrap
					padding 0
					padding 0 10px
					li
						size 13px
						margin 2px
	+e('order')
		padding 22px 0 0
		border-top 1px dashed #dbdbdb
		display flex
		flex-direction column
		@media screen and (min-width: 768px)
			flex-direction row
		.btn
			font-size 85%
			margin-top 22px
			@media screen and (min-width: 768px)
				margin-top 0