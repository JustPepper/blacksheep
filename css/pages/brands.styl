.brand-slider
	size 100% auto
	margin-bottom 75px
	position relative
	.background
		background url('../img/lost-brand-slider.png') no-repeat center top
		background-size cover
		size 100%
		position absolute
		top 0
		left 0
		z-index -2
		@media screen and (min-width: 1024px)
			background-size contain
	.background-mask
		position absolute
		size 100%
		position absolute
		top 0
		left 0
		-webkit-mask url('../img/mask.png')
		-webkit-mask-size 3000% 100%
		animation mask 12s steps(29) infinite
		z-index -1
		&:before
			content ''
			background url('../img/lost-brand-slider-2.png') no-repeat center top
			background-size cover
			size 100%
			position absolute
			top 0
			left 0
			@media screen and (min-width: 1024px)
				background-size contain
	@keyframes mask {
	    0% {
	        -webkit-mask-position: 0 0;
	        -ms-mask-position: 0 0;
	        -moz-mask-position: 0 0;
	        -o-mask-position: 0 0;
	        mask-position: 0 0;
	    }
	    12.5% {
	        -webkit-mask-position: 100% 0;
	        -ms-mask-position: 100% 0;
	        -moz-mask-position: 100% 0;
	        -o-mask-position: 100% 0;
	        mask-position: 100% 0;
	    }
	    50% {
	        -webkit-mask-position: 100% 0;
	        -ms-mask-position: 100% 0;
	        -moz-mask-position: 100% 0;
	        -o-mask-position: 100% 0;
	        mask-position: 100% 0;
	    }
	    62.5% {
	        -webkit-mask-position: 0 0;
	        -ms-mask-position: 0 0;
	        -moz-mask-position: 0 0;
	        -o-mask-position: 0 0;
	        mask-position: 0 0;
	    }
	}

	@media screen and (min-width: 1024px)
		size 100% 553px
	+e('item')
		size 100%
		font-size 32px
	+e('content')
		size 100%
		display flex
		flex-direction column
		padding 22px
		justify-content center
		@media screen and (min-width: 1024px)
			size 50% 100%
			align-items flex-end
			padding 0
			padding-right 45px
		.title
			font-family $secundary_font
			font-weight 900
			margin-bottom 12px
		.subtitle
			letter-spacing 5px
			margin-bottom 12px
		.dashed-border
			size 100% 1px
			border-bottom 1px dashed rgba($black, .50)
			margin-bottom 25%
	
	+m('skullcandy')
		margin-bottom 0
		.brand-slider__item
			background-size cover
			display flex
			align-items center
			padding 45px 22px
			@media screen and (min-width: 1024px)
				padding 0
				transform: skew(0,1deg)
		.brand-slider__content
			background rgba(black, .5)
			color white
			@media screen and (min-width: 1024px)
				height 150px
				transform skew(0,-1deg)
			.info
				size 100%
				display flex
				justify-content center
				flex-direction column
				align-items center
				@media screen and (min-width: 1024px)
					justify-content center
					flex-direction column
					align-items flex-start
					padding-left 75px
				.title
				.subtitle
					margin 0
				.subtitle
					@media screen and (min-width: 1024px)
						font-size 28px
.promo
	border-top 1px dashed rgba($black, .50)
	+m('skullcandy')
		@media screen and (min-width: 1024px)
			transform: skew(0,1deg)
		.wrapper
			height 120px
			position relative
			@media screen and (min-width: 1024px)
				height 65px
			.promo__title
				position absolute
				@media screen and (min-width: 1024px)
					transform skew(0, -1deg)
	+e('title')
		padding 22px
		display flex
		align-items flex-start
		flex-direction column
		@media screen and (min-width: 1024px)
			flex-direction row
			align-items center
			padding 22px 0
		.subtitle
		.text
			font-size 18px
		.subtitle
			font-weight 900
			margin-right 45px
		.text
			letter-spacing 4px
			font-weight 300
	+e('image')
		size 100% auto
		img
			width 100%

.brand-nav
	font-family $secundary_font
	ul
		display flex
		flex-direction column
		@media screen and (min-width: 768px)
			flex-direction row
		li
			size 100% 65px
			flex-center()
			cursor pointer
			@media screen and (min-width: 768px)
				size (100/ 4)% 65px
	+m('surf')
		border-bottom 1px dashed rgba($black, .50)
		li
			border-right 1px dashed rgba($black, .50)
			border-bottom 1px dashed rgba($black, .50)
			&:last-child
				border-bottom 0
			@media screen and (min-width: 768px)
				border-bottom 0
				&:last-child
					border 0
	
	+m('skullcandy')
		margin-top 4px
		background $black
		color white
		position relative
		@media screen and (min-width: 1024px)
			transform skew(0,1deg)
		ul
			li
				transition background 250ms ease
				border-bottom 1px dashed rgba(white, .50)
				@media screen and (min-width: 1024px)
					border-right 1px dashed rgba(white, .50)
					border-bottom 0
				&:hover
					background rgba(white, .50)
				&:last-child
					border-right 0
				a
					@media screen and (min-width: 1024px)
						transform skew(0,-1deg)
		.brand-nav--active
			background rgba(white, .50)
			border 0
				

.single-product--surf
	max-width 100%
	margin auto
	@media screen and (min-width: 1024px)
		padding 75px 0
	.single-product__order
		background $black
		color white
		border-top 0
		margin-top 45px
		padding 12px
		justify-content space-between
		.text
			font-size 18px
	.product
		width 100% 
		padding 22px
		@media screen and (min-width: 1024px)
			size (100 / 3)% 475px
			margin 0
			padding 0
		+e('photo')
			border 0
			overflow hidden
			size 100%
			margin 0 0 0 1%
			img
				size auto 100%
	.vertical-slider
		size 100% auto
		background white
		@media screen and (min-width: 1024px)
			size ( 100 / 4)% 100%
			border-right 1px dashed rgba($black, .5)
		div
			overflow hidden
			height 113px
			border-right 1px dashed rgba($black, .5)
			@media screen and (min-width: 1024px)
				border-bottom 1px dashed rgba($black, .5)
				border-right 0
			img
				height 100%
				@media screen and (min-width: 1024px)
					transform-origin 0 0
					transform rotate(90deg)
					width 35%
					height auto
					position absolute
					top 0
					left 100%
		.slick-current
			border-bottom 1px dashed #cacaca
			img
				opacity .2
		.slick-slide
			position relative
			flex-center()
		.slick-arrow
			background $black
			border none
			size 24px 100%
			position absolute
			bottom 0
			right 0
			outline 0
			flex-center()
			@media screen and (min-width: 1024px)
				size 100% 24px
				left 0
			svg
				size 20px
				fill white
				transform rotate(180deg)
				@media screen and (min-width: 1024px)
					transform rotate(-90deg)
		
		+m('skullcandy')
			border 0
			div
				border 0
				margin-bottom 4px
				img
					transform rotate(0deg)
					size auto 100%
					position relative
					left 0
					@media screen and (min-width: 1024px)
						size 100% auto
			.slick-current
				border 0



	.single-product__info
		width 100%
		padding-left 22px
		padding-right 22px
		@media screen and (min-width: 1024px)
			size (100 / 3)%
			padding 0 0 0 22px