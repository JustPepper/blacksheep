@import 'booo'

font-face('../fonts/Helvetica-Bold')

flex-center()
	display flex
	justify-content center
	align-items center

/* Colors */
$black = #212121

/* Fonts */
$primary_font = 'Helvetica-Bold', sans-serif
$secundary_font = 'Roboto', sans-serif

/* Global stylus */
svg#svg
	display none
a
	text-decoration none
	color inherit

.wrapper
	max-width 1080px
	size 100% auto
	margin auto

.full-width
	max-width 100%

.subtitle
	font-family $secundary_font
	font-size 16px
	font-weight 300
	letter-spacing 3px
	line-height 27px
	@media screen and (min-width: 768px)
		font-size 22px
.title
	font-family $primary_font
	+m('big')
		font-size 32px
		line-height 60px 
		@media screen and (min-width: 768px)
			font-size 55px

.long-title
	display flex
	align-items flex-end
	.title
		font-size 32px
	.subtitle
		font-size 18px
		margin-left 14px
		padding-left 14px
		border-left 1px solid $black

.text
	font-family $secundary_font
	font-size 16px
	
use-reset()
use-box-sizing-reset()
use-flex-grid()
use-animate({
	_rotateInUpLeft: true
	_duration: 300ms
})

/* Modules */
@import 'modules/*'
/* Libraries */
@import 'libs/*'
/* Top nav */
header
	background-color $black
	color white
	position relative
	.top-nav
		size 100% 68px
		display flex
		justify-content space-between
		align-items center
		font-family $secundary_font
		font-weight 400
		font-size rem(12px)
		padding 0 1rem
		@media screen and (min-width: 768px)
			padding 0
			height 86px
		+e('logo')
			height 34px
			@media screen and (min-width: 768px)
				height 54px
			svg
				height 100%
		+e('menu')
			display none
			height 100%
			@media screen and (min-width: 768px)
				display block
			ul
				display flex
				height inherit
				li
					position relative
					height inherit
					display flex
					align-items center
					&:hover
						ul
							display flex
				ul
					display none
					position absolute
					flex-direction column
					top 86px
					height auto
					background-color $black
					z-index 9999
					li
						size 200px auto
						a
							display block
							size 90% 60px
							padding 0
							margin auto
							display flex
							justify-content center
							align-items center
						&:first-child
							a
								border-bottom 1px dashed white
			a
				letter-spacing 3.23px
				padding 0 8px
				transition color 200ms linear
				size 100%
				display flex
				align-items center
				&:hover
					color #9b922c
	
	.featured-slider
		size 100% auto
		@media screen and (min-width: 768px)
			height 593px
		+e('item')
			size 100% 593px
			background-size cover
			background-position center
			background-repeat no-repeat
		+e('text')
			size inherit 593px
			display flex
			flex-direction column
			justify-content flex-start
			.subtitle
				margin-bottom 22px
			.title
				margin 45px 0 90px
			hr
				border none
				margin 0
				height 2px
				background-color white
				width 35%
				@media screen and (min-width: 768px)
					width 200px
		+e('bottom')
			padding 16px
			font-family $secundary_font
			font-weight 300
			text-align center
			background-color rgba(white, .10)
	.dots-wrapper
		position absolute
		size 100% 250px
		bottom 0
		left 0
		display flex
		justify-content flex-start
		align-items center
		.featured-dots
			display flex
			z-index 999
			button
				font-size 0
				background-color rgba(white, .45)
				size 38px 3px
				border 0
				margin 0 5px
				outline 0
				cursor pointer
			.slick-active
				button
					background-color white

.featured-video
	size 100% 300px
	background-size cover
	background-position center
	

.section
	padding 45px 0
	size 100% auto
	.section-featured
		width 28%
	.section-right
		line-height 1.1
		text-align justify
		display flex
		flex-direction column
		align-items flex-start
		justify-content flex-start
		width 100%
		padding 22px
		@media screen and (min-width: 768px)
			padding-left 75px
			text-align right
			align-items flex-end
			justify-content flex-end
		.icon-wrapper
			margin-bottom 12px

.back-img
	position absolute
	size 100%
	z-index -1
	overflow hidden
	transition all 250ms ease
	&:after
		content ''
		position absolute
		top 0
		left 0
		size 100%
		background-color rgba(#141414, .45)

.brands
	height auto
	overflow hidden
	@media screen and (min-width: 768px)
		height 400px
		display flex
	+e('item')
		position relative
		overflow hidden
		size 100% 400px
		@media screen and (min-width: 768px)
			size (100 / 3)% inherit 
		flex-center()
		&:nth-child(1)
			.back-img
				&:after
					background-color rgba(#141414, .94)
		&:nth-child(2)
		&:nth-child(3)
			&:hover
				.back-img
					transform scale(1.2)
		.caption
			.section-featured__title
				margin-bottom 75px
			.section-featured__title
			.section-featured__subtitle
				color white
			.section-featured__subtitle
				border-color white
		.skullcandy
			height 55px
			@media screen and (min-width: 768px)
				height 65px
		.lost
			height 100px
			
	+e('spec')
		size 100 - (100 / 3)% 400px
		position relative
		display flex
		.spec__item
			size (100 / 4)% inherit
			background-size cover
			background-position left
			.spec__info
				size 100%
				position absolute
				left 0
				top 0
				display none
			ul
				position absolute
				left 0
				top 0
				size 100%
				background-color #C2C2C2
				display flex
				li
					display flex
					flex-direction column
					size (100 / 5)% 100%
					div
						flex 1
					.spec__icon
					.spec__text
						flex-center()
						font-family $secundary_font
						text-transform uppercase
						letter-spacing 3px
						font-size 12px
					.spec__icon
						border-bottom 1px solid rgba($black, .15)
						border-right 1px solid rgba($black, .15)
						svg
							size 50px
							fill $black
					&:last-child
						.spec__icon
							border-right 0

.show
	display block !important

.img-accordion
	size 100% 400px
	overflow hidden
	position relative
	display none
	+e('item')
		size inherit
		flex-center()
		.back-img
			img
				size 100% auto
		&:nth-child(1)
			width 70%
		&:nth-child(2)
		&:nth-child(3)
			width 15%
		.section-featured
			color white
			+e('title')
				font-size 36px
			+e('subtitle')
				border-color white
				margin-bottom 22px
			.btn
				width 215px

.section-gallery
	padding-top 0
	height auto
	@media screen and (min-width: 768px)
		height 300px
	.section-left
		width 100%
		flex-center()
		@media screen and (min-width: 768px)
			width 58%
			.section-featured
				width auto
.carrousel
	display flex
	overflow hidden
	size 100% 300px
	margin-top 22px
	@media screen and (min-width: 768px)
		height 100%
		margin-top 0
	+e('item')
		height 100%
		overflow hidden
		video
		iframe
			height 300px !important
	.slick-prev
		background-color $black
		width 32px
		margin 0 5px
		border none
		svg
			size 18px
			fill white

.newsletter
	background url('../img/contact-back.jpg') no-repeat
	background-size cover
	color white
	.title
		font-size 24px
		text-align center
		@media screen and (min-width: 768px)
			font-size 32px
	.form
		display flex
		margin 38px auto 0
		max-width 775px
		flex-direction column
		align-items center
		@media screen and (min-width: 768px)
			flex-direction row
			justify-content space-around
		input
			width 300px
			margin-bottom 18px
			@media screen and (min-width: 768px)
				margin-bottom 0
		.btn
			color white
			padding-left 22px
			padding-right 22px

.form
	input
		background none
		border none
		border-bottom 1px solid white
		padding 12px 0
		font-family $secundary_font
		font-weight 300
		outline 0
		color white
		font-size 16px
		letter-spacing 2px
		+placeholder()
			color white
			transition transform 250ms ease
		&:focus
			+placeholder()
				transform translate(0, -110%)

.footer
	font-family $secundary_font
	+e('media')
		background-color $black
		flex-center()
		padding 6px 0
		svg
			fill white
	+e('copyright')
		padding 22px 0
		text-align center
		font-size 14px

/* About Page */
@import 'pages/about.styl'